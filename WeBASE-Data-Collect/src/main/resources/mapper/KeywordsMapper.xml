<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webank.webase.data.collect.keywords.KeywordsMapper">
    <resultMap id="keywordMap"
        type="com.webank.webase.data.collect.keywords.entity.TbKeyword">
        <result column="id" javaType="java.lang.Integer"
            jdbcType="INTEGER" property="id" />
        <result column="keyword" javaType="java.lang.String"
            jdbcType="VARCHAR" property="keyword" />
        <result column="create_time" javaType="java.time.LocalDateTime"
            jdbcType="TIMESTAMP" property="createTime" />
        <result column="modify_time" javaType="java.time.LocalDateTime"
            jdbcType="TIMESTAMP" property="modifyTime" />
    </resultMap>

    <insert id="add">
        insert into tb_keywords
        (keyword,create_time,modify_time)
        values(#{keyword},NOW(),NOW())
    </insert>
    
    <update id="update">
		update tb_keywords
		set keyword = #{keyword},
			modify_time = now()
		where id = #{id}
	</update>

    <select id="getCount"
        resultType="java.lang.Integer">
        select count(1) from tb_keywords
        where 1=1
    </select>

    <select id="getList"
        resultMap="keywordMap">
        select * from tb_keywords
        where 1=1
        order by id
    </select>

    <select id="getKeywordById" resultMap="keywordMap" parameterType="java.lang.Integer">
        select * from tb_keywords where id = #{id}
    </select>

    <select id="getKeywordByKeyword" resultMap="keywordMap" parameterType="java.lang.String">
        select * from tb_keywords where keyword = #{keyword}
    </select>

    <delete id="remove" parameterType="java.lang.Integer">
        delete from tb_keywords where id = #{id}
    </delete>

</mapper>
